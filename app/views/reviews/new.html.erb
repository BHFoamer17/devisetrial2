<!-- Validation failure messages -->

<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Review</h3>
      </div>
      <div class="panel-body">
        <form action="/create_review" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for image -->
          <div class="form-group">
            <label for="image" class="col-sm-2 control-label">
              Image
            </label>
            <div class="col-sm-10">
              <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @review.image %>">
            </div>
          </div>

          <!-- Label and input for street_address -->
          <div class="form-group">
            <label for="street_address" class="col-sm-2 control-label">
              Street address
            </label>
            <div class="col-sm-10">
              <input type="text" id="street_address" name="street_address" placeholder="Street address" class="form-control" value="<%= @review.street_address %>">
            </div>
          </div>

          <!-- Label and input for year_completed -->
          <div class="form-group">
            <label for="year_completed" class="col-sm-2 control-label">
              Year completed
            </label>
            <div class="col-sm-10">
              <input type="text" id="year_completed" name="year_completed" placeholder="Year completed" class="form-control" value="<%= @review.year_completed %>">
            </div>
          </div>

          <!-- Label and input for month_completed -->
          <div class="form-group">
            <label for="month_completed" class="col-sm-2 control-label">
              Month completed
            </label>
            <div class="col-sm-10">
              <input type="text" id="month_completed" name="month_completed" placeholder="Month completed" class="form-control" value="<%= @review.month_completed %>">
            </div>
          </div>

          <!-- Label and input for cost -->
          <div class="form-group">
            <label for="cost" class="col-sm-2 control-label">
              Cost
            </label>
            <div class="col-sm-10">
              <input type="text" id="cost" name="cost" placeholder="Cost" class="form-control" value="<%= @review.cost %>">
            </div>
          </div>

          <!-- Label and input for relationship -->
          <div class="form-group">
            <label for="relationship" class="col-sm-2 control-label">
              Relationship
            </label>
            <div class="col-sm-10">
              <input type="text" id="relationship" name="relationship" placeholder="Relationship" class="form-control" value="<%= @review.relationship %>">
            </div>
          </div>

          <!-- Label and input for review -->
          <div class="form-group">
            <label for="review" class="col-sm-2 control-label">
              Review
            </label>
            <div class="col-sm-10">
              <textarea id="review" name="review" placeholder="Review" class="form-control" rows="3"><%= @review.review %></textarea>
            </div>
          </div>

          <!-- Label and input for rating -->
          <div class="form-group">
            <label for="rating" class="col-sm-2 control-label">
              Rating
            </label>
            <div class="col-sm-10">
              <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @review.rating %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Review
              </button>
              or
              <a href="/reviews">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
